<div class="page-header">
  <h1>Usu&aacute;rios</h1>
</div>

<div class="row">

  <div class="span14">
    <table class="zebra-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>E-mail</th>
          <th>A&ccedil;&otilde;es</th>
        </tr>
      </thead>
      <% @users.each do |u| %>
        <tr>
        <td><%= u.id %></td>
        <td><%= u.email %></td>
        <td>
          <%= link_to "R", roles_path(u), :method => :delete, :confirm => "Está certo disto?", :class => "btn danger" %>
          <%= link_to "E", edit_role_path(u), :class => "btn success" %>
        </td>
      </tr>
    <% end %>
    </table>

    <div class="actions">
      <%= link_to "Novo Usuário", new_role_path, :class => "btn primary" %>
    </div>

  </div>

</div>
